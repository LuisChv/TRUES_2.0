<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="-1000"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="1000">

    <shape
        android:shape="ring"
        android:useLevel="false">

        <gradient
            android:angle="90"
            android:centerColor="#dfe9f3"
            android:endColor="#00fd1d1d"
            android:startColor="#ffffff"
            android:type="sweep"
            android:useLevel="false" />

    </shape>

</rotate>
